        <div class="table-btn">
          <button>
            <a href="/">home</a>
          </button>

          <form action="/<%=id%>?page" method="get" class="table-form">
            <input
              type="number"
              id="searchbar"
              onkeyup=""
              placeholder="got to page..."
              name="page"
              required
            />
            <span type="submit" class="search-cnt">
              <i class="fa-solid fa-magnifying-glass"></i>
            </span>
          </form>
        </div>
        <!-- <hr /> -->

        <div class="page-number">
          <small>page-<%= page%></small>
          <small
            style="
              float: right;
              color: blue;
              cursor: pointer;
              text-decoration: underline;
            "
          >
            <form
              id="delete-form"
              method="post"
              action="/deleteCsv/<%=id%>"
            ></form>
            <a onclick="document.getElementById('delete-form').submit()">
              delete
            </a>
          </small>
        </div>

        <div class="list-box" style="height: 80vh">
          <h1><%= name %></h1>

          <div id="list-details">
            <table>
              <tr>
                <th>SrNo.</th>
                <%for(key of keyname) { %>
                <th><%= key %></th>
                <% } %>
              </tr>

              <% let i = 1 * page * 100 - 99; %> <% for(data of data) { %>
              <tr>
                <td><%= i%></td>
                <% i++ %> <%for(let value of Object.values(data)) { %>
                <td><%=value %></td>
                <% } %>
              </tr>
              <% } %>
            </table>
          </div>
          <div class="pages">
            <span>
              <a href="<%=id%>?page=<%=Number(page)-1%>"
                ><button>< prev</button></a
              >
            </span>
            <span>
              <a href="<%=id%>?page=<%=Number(page)+1%>"
                ><button>next ></button></a
              >
            </span>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
